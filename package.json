{
    "name": "milhous",
    "version": "1.0.0",
    "description": "主站2.0",
    "main": "index.js",
    "private": true,
    "repository": {
        "type": "git",
        "url": "http://gitlab.lan.com/front-end/website-v2.git"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "mage-cli"
        ]
    },
    "scripts": {
        "create": "mage create",
        "launch": "mage launch",
        "setup": "lerna init --independent && lerna clean --yes && lerna bootstrap",
        "update": "lerna run --parallel update",
        "start": "lerna run --scope @packages/* --parallel start",
        "build": "lerna run --scope @packages/* build",
        "start:name": "cross-var lerna run --scope=@packages/$name start",
        "build:name": "cross-var lerna run --scope=@packages/$name build",
        "analyze": "lerna run --scope @packages/* --parallel start",
        "lint": "lerna run --scope @packages/* --parallel lint",
        "clean": "lerna run --scope @packages/* --parallel clean"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "cross-var": "^1.1.0",
        "lerna": "^4.0.0",
        "npm-check-updates": "^12.5.9"
    }
}
